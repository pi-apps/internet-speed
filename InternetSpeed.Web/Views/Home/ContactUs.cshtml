@{
    ViewData["Title"] = "Contact Us";
}

<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-8">

                <div class="axil-about-us">
                    <div class="inner">
                        <h2>Contact Us (Currently Under Maintenance)</h2>
                        <p>We are currently making improvements to our contact system. During this time, you may experience temporary issues while submitting messages.</p>
                        <p><strong>If you need immediate assistance</strong>, please reach out to us via email.</p>
                        <p class="primary-color">Email: <a href="mailto:vpslabworld@gmail.com">vpslabworld@gmail.com</a></p>
                        <p>Thank you for your patience and understanding!</p>
                    </div>

                    <div class="axil-section-gapTop axil-contact-form-area">
                        <h4 class="title mb--10">Send Us a Message</h4>
                        <p class="b3 mb--30">Our contact form is available, but responses may be delayed due to ongoing maintenance.</p>

                        <form id="contact-form" method="POST" action="#" class="axil-contact-form contact-form--1 row">
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="form-group">
                                    <label for="contact-name">Your Name</label>
                                    <input name="contact-name" id="contact-name" type="text">
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="form-group">
                                    <label for="contact-phone">Phone</label>
                                    <input type="text" name="contact-phone" id="contact-phone">
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="form-group">
                                    <label>Your Email</label>
                                    <input for="contact-email" name="contact-email" id="contact-email" type="email">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="contact-message">Your Message</label>
                                    <textarea name="contact-message" id="contact-message"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-submit">
                                    <button name="submit" type="submit" id="submit" class="axil-button button-rounded btn-primary" disabled>
                                        Submit (Currently Unavailable)
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
